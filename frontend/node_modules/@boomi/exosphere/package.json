{
  "name": "@boomi/exosphere",
  "version": "0.1.1",
  "license": "BSD-3-Clause",
  "author": "Boomi, LP",
  "homepage": "https://exosphere.boomi.com/",
  "main": "dist/index.es.js",
  "exports": {
    ".": {
      "import": "./dist/react/index.es.js",
      "require": "./dist/react/index.cjs.js"
    },
    "./dist/styles.css": {
      "import": "./dist/styles.css",
      "require": "./dist/styles.css"
    }
  },
  "types": "./types/react/index.d.ts",
  "files": [
    "dist",
    "types"
  ],
  "config": {
    "branch": "develop"
  },
  "scripts": {
    "clean": "rimraf dist storybook-static",
    "prestart": "cp scripts/pre-commit .git/hooks/ && chmod +x .git/hooks/pre-commit && echo 'hook copied'",
    "dev": "vite",
    "build": "ENV=production npm run build:lit && ENV=production npm run build:react && npm run scss",
    "build:dev": "ENV=development npm run build:lit &&  ENV=development npm run build:react",
    "build:lit": "tsc && vite build",
    "build:react": "tsc && vite build --config vite.react.config.ts && node ./scripts/build-react.js",
    "build-storybook": "npm run scss && build-storybook && mkdir -p storybook-static/dist && cp dist/styles.css storybook-static/dist/ && mkdir -p storybook-static/docs/assets && cp -R docs/assets/ storybook-static/docs/assets",
    "build-storybook:host": "npm i && npm run clean && npm run build-storybook",
    "prebuild-storybook:host": "git checkout $npm_config_branch && git pull --rebase",
    "postbuild-storybook:host": "http-server storybook-static -o",
    "storybook": "npm run scss && npm run scss:watch | start-storybook -s ./dist -p 6006",
    "test": "vitest run",
    "test:dev": "vitest",
    "test:ui": "vitest --ui",
    "coverage": "vitest run --coverage",
    "analyze": "wca analyze",
    "lint": "eslint \"src/components/**/*.ts\" \"src/components/**/*.stories.ts\"",
    "lint:fix": "eslint \"src/components/**/*.ts\" \"src/components/**/*.stories.ts\" --fix",
    "create-component": "node scripts/create-component.js",
    "scss": "node-sass src/styles/styles.scss dist/styles.css --output-style compressed",
    "scss:watch": "node-sass --watch src/styles/styles.scss dist/styles.css --output-style compressed"
  },
  "dependencies": {
    "lit": "^2.0.2",
    "node-sass": "^7.0.3"
  },
  "devDependencies": {
    "@etchteam/storybook-addon-status": "^4.2.1",
    "@storybook/addon-a11y": "^6.4.22",
    "@storybook/addon-actions": "^6.4.19",
    "@storybook/addon-essentials": "^6.4.19",
    "@storybook/addon-links": "^6.4.19",
    "@storybook/builder-vite": "^0.1.33",
    "@storybook/web-components": "^6.4.19",
    "@typescript-eslint/eslint-plugin": "^5.29.0",
    "@typescript-eslint/parser": "^5.29.0",
    "@vitest/ui": "^0.10.2",
    "babel-loader": "^8.2.3",
    "c8": "^7.11.2",
    "esbuild": "^0.14.38",
    "eslint": "^8.18.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-storybook": "^0.5.12",
    "happy-dom": "latest",
    "http-server": "^14.1.1",
    "npm-dts": "^1.3.11",
    "prettier": "2.7.1",
    "prompt-sync": "^4.2.0",
    "rimraf": "^3.0.2",
    "rollup-plugin-minify-html-literals": "^1.2.6",
    "rollup-plugin-terser": "^7.0.2",
    "storybook-addon-designs": "^6.2.1",
    "storybook-dark-mode": "^1.1.0",
    "typescript": "^4.5.4",
    "vite": "^2.8.0",
    "vite-plugin-eslint": "^1.6.1",
    "vitest": "^0.12.4",
    "web-component-analyzer": "^2.0.0-next.4"
  }
}
